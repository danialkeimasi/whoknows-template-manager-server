{
	"values": {
        "team": "db(footballTable)",
        "teams": "db(footballTable[(footballTable.league == var.team.league) & (footballTable.wins != var.team.wins)] ,NOC)"
    },
	"$choose": {
		"title": {
			"text": ["کدام تیم تعداد بردهایش در لیگ `var.team.league` برابر `var.team.wins` میباشد؟"]
	},
		"choice": {
			"text": ["var.teams.name"]
	},
		"answer": {
			"text": ["var.team.name"]
	}
	},
	"$write": {
		"title": {
			"text": ["چه تیمی تعداد بردهایش در لیگ `var.team.league` برابر `var.team.wins` میباشد؟"]
	},
		"answer": {
			"text": ["var.team.name"]
	}
	},
	"$bool": {
		"title": {
			"text": ["تیم `var.team.name` در لیگ `var.team.league` `var.team.point` امتیاز دارد." ,
                            "تیم `var.team.name` در لیگ `var.team.league` `var.teams.choose(1).point` امتیاز دارد."]
	}
	},
	
	"datasets": ["footballTable"],
	"usage": ["contest"],
	"level": 2,
	"score_function": "default",
	"time_function": "default",
	"tags": ["football", "footballTable", "league" ,"table"],
