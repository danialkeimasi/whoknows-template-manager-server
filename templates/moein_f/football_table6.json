{
	"values": {
        "team": "db(footballTable)",
        "teams": "db(footballTable[(footballTable.league == var.team.league) & (footballTable.gf != var.team.gf] ,NOC)"
    },
	"$choose"          : {
		"title"        : {
			"text"       : ["تیم `var.team.name` در لیگ `var.team.league` چه تعداد گل زده است؟"]
	},
		"choice"        : {
			"text"       : ["var.teams.gf"]
	},
		"answer"        : {
			"text"       : ["var.team.gf"]
	}
	},
	"$write"          : {
		"title"        : {
			"text"       : ["تیم `var.team.name` در لیگ `var.team.league` چه تعداد گل زده است؟"]
	},
		"answer"        : {
			"text"       : ["var.team.gf"]
	}
	},
	"$bool"          : {
		"title"        : {
			"text"       : ["تیم `var.team.name` در لیگ `var.team.league` `var.team.point` امتیاز دارد." ,
                            "تیم `var.team.name` در لیگ `var.team.league` `var.teams.choose(1).point` امتیاز دارد."]
	}
	},
	
	"datasets": ["footballTable"],
	"usage": ["contest"],
	"level": 2,
	"score_function": "default",
	"time_function": "default",
	"tags": ["football", "footballTable", "league" ,"table"],
	"__state": "",
	"__test_info": {},
	"__idea": [""]

} 