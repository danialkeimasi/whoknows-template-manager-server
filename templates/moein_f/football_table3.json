			"text"       : ["var.teams.point"]
	},
		"answer"        : {
			"text"       : ["var.team.point"]
	}
	},
	"$write"          : {
		"title"        : {
			"text"       : ["تیم `var.team.name` در لیگ `var.team.league` چند امتیاز دارد؟"]
	},
		"answer"        : {
			"text"       : ["var.team.point"]
	}
	},
	"$bool"          : {
