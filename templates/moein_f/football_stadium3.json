{
	"values": {
        "stadium": "db(footballStadium)",
        "stadiums": "db(footballStadium[footballStadium.year != var.stadium.year], NOC)"
    },
	"$choose"          : {
		"title"        : {
			"text"       : ["ورزشگاه `var.stadium.name` در چه سالی تاسیس شده است؟"]
	},
		"choice"        : {
			"text"       : ["var.stadiums.year"]
	},
		"answer"        : {
			"text"       : ["var.stadium.year"]
	}
	},
	"$write"          : {
		"title"        : {
			"text"       : ["ورزشگاه `var.stadium.name` در چه سالی تاسیس شده است؟"]
	},
		"answer"        : {
			"text"       : ["var.stadium.year"]
	}
	},
	"$bool"          : {
		"title"        : {
			"text"       : ["ورزشگاه `var.stadium.name` در سال `var.stadium.year` تاسیس شده است.",
                            "ورزشگاه `var.stadium.name` در سال `var.stadiums.choose(1).year` تاسیس شده است."]
	}
	},
	
	"datasets": ["footballStadium"],
	"usage": ["contest"],
	"level": 2,
	"score_function": "default",
