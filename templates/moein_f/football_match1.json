{
	"values": {
        "match": "db(footballMatch)",
        "matches": "db(footballMatch[footballMatch.ref != var.match.ref], NOC)"
    },
	"$choose": {
		"title": {
			"text": ["در بازی `var.match.name` داور وسط بازی چه کسی بود؟"]
	},
		"choice": {
			"text": ["$var.matches.ref"]
	},
		"answer": {
			"text": ["$var.match.ref"]
	}
	},
	"$write": {
		"title": {
			"text": ["در بازی `var.match.name` داور وسط بازی چه کسی بود؟"]
	},
		"answer": {
			"text": ["$var.match.ref"]
	}
	},
	"$bool": {
		"title": {
			"text": ["داوری بازی `var.team.name` بر عهده ی `var.match.ref` بود.",
                            "داوری بازی `var.team.name` بر عهده ی `var.matches.choose(1).ref` بود."]
	}
	},
	
	"datasets": ["footballMatch"],
	"usage": ["contest"],
	"level": 2,
	"score_function": "default",
	"time_function": "default",
	"tags": ["football", "footballMatch", "match"],
	"__state": "",
	"__test_info": {},
	"__idea": [""]

} 