{
  "values"	: {
    "team"          : "db(footballTeam)",
    "team_same"     : "db(footballTeam[(footballTeam.league_name == var.team.league_name) & (footballTeam.team_name != var.team.team_name)])",
    "leagues"       : "listSub(footballTeam.league_name, var.team.league_name)",
    "True_or_False" : "rand( [True,False] )"
    },
  "choose"          : {
    "title"        : {
      "text"       : ["تیم `var.team.team_name` در کدام لیگ فعالیت میکند؟" , "تیم `var.team.team_name` و `var.team_same.team_name` در کدام لیگ فعالیت میکنند؟"]
  },
    "choice"        : {
      "text"       : ["`var.leagues.choose(NOC)`"]
  },
    "answer"        : {
      "text"       : ["`var.team.league_name`"]
  }
  },

  "write"          : {
    "title"        : {
      "text"       : ["تیم `var.team.team_name` در چه لیگی فعالیت میکند؟"]
  },
  
    "answer"        : {
      "text"       : ["`var.team.league_name`"]
  }
  },
  "bool"          : {
    "title"        : {
      "text"       : ["تیم `var.team.team_name` در لیگ `var.team.league_name` فعالیت میکند؟" , "تیم `var.team.team_name` در لیگ `var.leagues.choose(1)` فعالیت میکند؟"]
  },
    "answer"        : {
      "text"       : ["`var.True_or_False`"]
  }
  },
  "_id" : "football_team1",
	"datasets": ["footballTeam"],
	"usage": ["contest"],
	"level": 2,
	"score_function": "default",
	"time_function": "",
	"tags": ["football", "footballTeam", "team" , "club"],
	"state": "",
	"state_info": {},
	"idea": [""]

} 