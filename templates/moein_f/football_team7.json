{
  "values": {
    "team": "db(footballTeam)",
    "teams_same": "db(footballTeam[(footballTeam.league == val.team.league) & (footballTeam.coach != val.team.coach) ] ,NOC)",
    "teams": "db(footballTeam[(footballTeam.league != val.team.league)] ,NOC)",
    "ans_cnt": "rand(range(1,NOC+1))"
  },
  "&choose": {
    "title": {
      "text": [
        "کدام مربی در لیگ `val.team.league` مربیگری میکند؟"
      ]
    },
    "choice": {
      "text": [
        "$val.teams.choose(NOC).coach"
      ]
    },
    "answer": {
      "text": [
        "$val.team.coach"
      ]
    }
  },
  "&select": {
    "title": {
      "text": [
        "کدام مربیان در لیگ `val.team.league` مربیگری میکنند؟"
      ]
    },
    "choice": {
      "text": [
        "$val.teams.choose(NOC - val.ans_cnt + 1).coach"
      ]
    },
    "answer": {
      "text": [
        "$val.teams_same.choose(val.ans_cnt).coach"
      ]
    }
  },
  "datasets": [
    "footballTeam"
  ],
  "usage": [
    "contest"
  ],
  "level": 2,
  "score_function": "default",
  "time_function": "default",
