{
	"values": {
        "team": "db(footballTable)",
        "teams": "db(footballTable[(footballTable.league == var.team.league) & (footballTable.losts != var.team.losts)] ,NOC)"
    },
	"$choose"          : {
		"title"        : {
			"text"       : ["تعداد باخت تیم `var.team.name` در لیگ `var.team.league` برابر کدام گزینه است؟"]
	},
		"choice"        : {
			"text"       : ["var.teams.losts"]
	},
		"answer"        : {
			"text"       : ["var.team.losts"]
	}
	},
	"$write"          : {
		"title"        : {
			"text"       : ["تعداد باخت تیم `var.team.name` در لیگ `var.team.league` چند است؟"]
	},
		"answer"        : {
			"text"       : ["var.team.losts"]
	}
	},
	"$bool"          : {
		"title"        : {
			"text"       : ["تعداد باخت تیم `var.team.name` در لیگ `var.team.league` برابر `var.team.lost` میباشد.",
                            "تعداد باخت تیم `var.team.name` در لیگ `var.team.league` برابر `var.teams.choose(1).lost` میباشد."]
	}
	},
	
	"datasets": ["footballTable"],
	"usage": ["contest"],
	"level": 2,
	"score_function": "default",
	"time_function": "default",
	"tags": ["football", "footballTable", "league" ,"table"],
	"__state": "",
	"__test_info": {},
	"__idea": [""]

} 