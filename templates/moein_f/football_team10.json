{
	"values": {
        "team": "db(footballTeam)",
        "teams": "db(footballTeam[footballTeam.league != val.team.league] , NOC)",
        "teams_same": "db(footballTeam[(footballTeam.league == val.team.league) & (footballTeam.name != val.team.name)] ,NOC)",
        "countries": "listSub(footballTeam.country , val.team.country)",
        "True_or_False": "rand([True,False])",
        "ans_cnt": "rand(range(1,NOC+1))"
    },
	"&choose": {
		"title": {
			"text": ["`val.team.name` متعلق به کدام کشور است؟"]
	},
		"choice": {
			"text": ["val.countries.choose(NOC)"]
	},
		"answer": {
			"text": ["val.team.country"]
	}
	},
	"&select": {
		"title": {
            "text": ["کدام تیم ها متعلق به کشور `val.team.country` میباشند؟"]
	},
		"choice": {
            "choice": ["val.teams.choose(NOC - val.ans_cnt + 1).name"]
	},
		"answer": {
            "text": ["val.teams_same.choose(val.ans_cnt).name"]  
	}
	},
	"&write": {
		"title": {
			"text": ["`val.team.name` متعلق به کدام کشور است؟"]
	},
		"answer": {
			"text": ["val.team.country"]
	}
	},
	"&bool": {
		"title": {
			"text": ["`val.team.name` متعلق به کشور `val.team.country` میباشد؟.",
                            "`val.team.name` متعلق به کشور `val.teams.choose(1).country` میباشد."]
	}
	},
	
	"datasets": ["footballTeam"],
	"usage": ["contest"],
	"level": 2,
	"score_function": "default",
	"time_function": "default",
	"tags": ["football", "footballTeam", "team", "club"],
	"__state": "",
	"__test_info": {},
	"__idea": [""]


} 